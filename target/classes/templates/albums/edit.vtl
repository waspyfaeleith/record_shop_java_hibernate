<p class="pageHeader">Edit Album</p>

<form action="/albums/$album.getId()" method="post">
        <label for="title">Title:</label>
        <input type="text" class="inputbox" name="title" required="true" value="$album.getTitle()">

        <label for="artist">Artist:</label>
        <select id="artist" name="artist">
           #foreach( $artist in $artists )
                <option value="$artist.getId()"
                #if ($artist.getId() == $album.getArtist().getId())
                    selected="selected"
                #end>
                $artist.getName()</option>
           #end
        </select>

        <label for="quantity">Quantity:</label>
        <input type="number" class="inputbox" name="quantity" required="true" value="$album.getQuantity()">

        <input type="submit" value="Save" class="button">
</form>